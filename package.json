{
  "name": "dbushell.com",
  "private": true,
  "version": "9.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dbushell/dbushell.com.git"
  },
  "author": "David Bushell <david@dbushell.com>",
  "license": "UNLICENSED - Copyright Â© David Bushell",
  "scripts": {
    "build": "./index.js",
    "lint": "./node_modules/.bin/xo",
    "test": "./node_modules/.bin/jest --config=./src/__tests__/jest.json",
    "start": "./node_modules/.bin/browser-sync start --server=dbushell.github.io --no-notify",
    "css": "./node_modules/.bin/node-sass --output-style=compressed ./src/scss/combined.scss ./dbushell.github.io/assets/css/combined.css"
  },
  "babel": {
    "babelrc": false,
    "presets": [
      "es2015",
      "react"
    ],
    "plugins": [
      "add-module-exports",
      "transform-object-rest-spread",
      "transform-async-to-generator"
    ]
  },
  "xo": {
    "space": true,
    "extends": [
      "xo-react"
    ],
    "envs": [
      "node",
      "browser",
      "jest"
    ],
    "rules": {
      "no-unused-vars": "warn",
      "react/no-danger": "warn",
      "react/no-unused-prop-types": "off"
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".json"
          ]
        }
      }
    }
  },
  "dependencies": {
    "babel-cli": "^6.22.2",
    "babel-core": "^6.22.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-async-to-generator": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "browser-sync": "^2.18.7",
    "chalk": "^1.1.3",
    "enzyme": "^2.7.1",
    "eslint-config-xo-react": "^0.10.0",
    "eslint-plugin-react": "^6.9.0",
    "front-matter": "^2.1.2",
    "fs-extra": "^2.0.0",
    "handlebars": "^4.0.14",
    "jest": "^18.1.0",
    "jest-cli": "^18.1.0",
    "jest-enzyme": "^2.1.2",
    "js-beautify": "^1.6.8",
    "lodash.clonedeep": "^4.5.0",
    "lodash.compact": "^3.0.1",
    "lodash.merge": "^4.6.0",
    "marked": "^0.3.6",
    "moment": "^2.17.1",
    "node-sass": "^4.5.0",
    "prismjs": "^1.6.0",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "striptags": "^3.0.1",
    "xo": "^0.17.1",
    "yargs": "^6.6.0"
  }
}
